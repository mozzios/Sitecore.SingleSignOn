@model Sitecore.SingleSignOn.Models.Account.RegisterModels

@{
    ViewBag.Title = "Register";
}
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.Fullname, new {@class = "lead"})
        @Html.TextBoxFor(model => model.Fullname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Username, new { @class = "lead" })
        @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Password, new { @class = "lead" })
        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
    </div>
    <input class="btn btn-info" type="submit" value="Register" />
    <a href="/Account/Login" class="btn btn-primary">Login</a>
}
