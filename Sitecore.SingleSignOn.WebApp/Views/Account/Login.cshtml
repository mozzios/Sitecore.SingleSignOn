@model Sitecore.SingleSignOn.Models.Account.LoginModels

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.Username, new { @class = "lead" })
        @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Password, new { @class = "lead" })
        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
    </div>
    <input class="btn btn-primary" type="submit" value="Login" />
    <a href="/Account/Register" class="btn btn-info">Register</a>
}


